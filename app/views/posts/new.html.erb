<div class="container">
<%= form_for @post do |f| %>
<%= f.label :nazwa %> </br>
<%= f.text_field :title, placeholder: "Wpisz nazwę posta" %> </br>

<%= f.label :tekst %> </br>
<%= f.text_field :body, placeholder: "Wpisz treść posta", :cols => "10", :rows => "20" %> </br>

<%= f.submit "Utwórz post" %>
<% end %>
</div>