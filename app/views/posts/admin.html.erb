<div class="container">
<% @posts.each do |post| %>
    <p>
       <h2>Tytuł: <%= link_to post.title, post_path(post) %></h2> | <%= link_to 'Edytuj', edit_post_path(post), class: "btn btn-danger" %> |
       <%= link_to 'Usuń', post, method: :delete, class: "btn btn-danger" %> |  </br>
       <%= post.body %>
    </p>
<% end %>
</div>